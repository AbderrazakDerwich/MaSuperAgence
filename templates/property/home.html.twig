{% extends 'base.html.twig' %}
{% block title %}Hello PropertyController!
{% endblock %}
{% block body %}

	<div class="class p-4 bg-light text-white rounded">
		{{ form_start(form)}}
		<div class="row">
			<div class="form-group col-4" ">
				{{ form_row(form.minPrice, { 'label': 'Titre' }) }}
			</div>
			<div class="form-group col-4">
				{{ form_row(form.minSurface, { 'label': 'Surface' }) }}
			</div>
			<div class="col-4">
				<button type="submit" class="btn btn-outline-secondary">Search</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>


	<h1 class="my-4">
		<center>Voir tous nos biens</center>
	</h1>
	<div class="container">
		<div class="row mt-2">
			{% for property in propertys %}
				<div class="col-3 mr-2 mt-2">
					<div class="card" style="width: 14rem;">
						<img src="{{ vich_uploader_asset(property) }}" alt="{{ property.imageName }}" style="weight=100%;height=300;">
						<div class="card-body">
							<h5 class="card-title">{{property.title}}</h5>
							<p class="card-text" style="line-height: 0.8;">{{property.city}}.{{property.PostalCode}}</p>
							<p class="card-text" style="line-height: 0.8;">{{property.price}}.Â£</p>
							<a href="{{path('app_show',{id:property.id})}}" class="btn btn-outline-primary btn-sm">
								voir</a>
						</div>
					</div>
				</div>
			{% endfor %}
			<div class="navigation mt-5">
				{{ knp_pagination_render(propertys,'partials/pagination.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
